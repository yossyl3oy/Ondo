{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ondo",
  "version": "1.2.1",
  "identifier": "com.ondo.hwmonitor",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEQxQzAwNkUyOENFQTcyMUYKUldRZmN1cU00Z2JBMFc1OW1uVTJkV1N2bEVtSGVIK3ZNZlZVcjZEUDk3SmI0Vm5NSGh1M01VL1gK",
      "endpoints": [
        "https://github.com/yossyl3oy/Ondo/releases/latest/download/latest.json"
      ]
    }
  },
  "app": {
    "windows": [
      {
        "title": "Ondo",
        "width": 200,
        "height": 480,
        "minWidth": 180,
        "minHeight": 350,
        "resizable": true,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": false,
        "skipTaskbar": true,
        "visible": true,
        "focus": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "nsis": {
        "installMode": "currentUser"
      }
    },
    "resources": []
  }
}
